<h1 class="title">Current Bet</h1>
<h1><i class="fa fa-money fa-2x title" aria-hidden="true"></i></h1>
<div class="row">
<% if @bet.posted? || @bet.taken? %>
<div class="col-xs-6">
  <h3>Time until bet begins</h3>
  <%= TimeDifference.between(DateTime.current, @bet.startdate).humanize %>
</div>
<% end %>
<% if @bet.posted? || @bet.taken? || @bet.in_progress? %>

<div class="col-xs-6 <% if @bet.in_progress? %> col-xs-offset-3 <% end %>">
  <h3>Time until bet ends</h3>
  <%= TimeDifference.between(DateTime.current, @bet.enddate).humanize %>
</div>
<% end  %>
</div>
<br>
<!-- tenemos
t.datetime "startdate"
t.datetime "enddate"
calculamos current date-->
<div class="row">
<div class="col-xs-12">
<h4>Amount of <%= number_to_currency(@bet.amount) %></h4>
</div>
</div>
<h4>State <%= @bet.aasm_state %></h4>
<%if @bet.posted? || @bet.taken? %>
<hr>
<h1><%= link_to '<i class="fa fa-handshake-o" aria-hidden="true"></i> Participate in Bet'.html_safe, bets_path(bet_id: @bet, portfolio_id: @closeportfolio), method: :post, class:"btn btn-success btn-lg" %></h1>
<% end  %>
<hr>
<table class="table table-hover">
  <thead>
    <tr>
      <th>UserNames</th>
      <th>Stocks in Portfolio</th>
      <% if @bet.in_progress? || @bet.finished?  %>
        <th>Starting Value</th>
      <% end %>
      <% if @bet.finished? %>
        <th>End Value</th>
        <th>Return</th>
        <th>Winner</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @portfolios.each do |x| %>
      <tr>
        <td><%= x.user.display_name %></td>
        <td><% x.tickers.each do |x| %>
           <span class="btn btn-default btn-sm"><%= x.name %> </span>
          <% end %>
        </td>
        <% if @bet.in_progress? || @bet.finished? %>
        <td><%= x.startvalue %></td>
        <% end %>
        <% if @bet.finished? %>
          <td><%= x.currentvalue %> </td>
          <td><%= ((x.return-1)*100).round(2) %> % </td>
          <td><% if x.winner %> <span class="btn btn-success">
            <i class="fa fa-money fa-2x" aria-hidden="true"></i><% end  %>
          </span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
