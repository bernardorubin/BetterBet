<h1 style="color:white" class="toggleFundamentals btn-default hoverable">FUNDAMENTALS</h1>
<div id="fundamentals" style="display:none">
  <div class="row">
    <div class="col-md-4">
      <h4>EBITDA</h4>
        <% @zip_fundamental.each do |x, y| %>
          <%= x %> -  <%= y.ebitda %><br>
        <% end  %>
    </div>
    <div class="col-md-4">
      <h4>PE Ratio</h4>
        <% @zip_fundamental.each do |x, y| %>
          <%= x %> -  <%= y.pe_ratio %><br>
        <% end  %>
    </div>
    <div class="col-md-4">
      <h4>Short Ratio</h4>
        <% @zip_fundamental.each do |x, y| %>
          <%= x %> -  <%= y.short_ratio%><br>
        <% end  %>
      </div>
  </div>
</div>

<hr>

