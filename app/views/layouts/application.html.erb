<!DOCTYPE html>
<html>
  <head>
    <title>StocksRails</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js"></script>
    <script src="http://cdn.rawgit.com/hilios/jQuery.countdown/2.2.0/dist/jquery.countdown.min.js"></script>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div id="container-messages" align="center">
      <div class='alert alert-success'<%= ' style="display: none"'.html_safe unless notice %>><%= notice if notice %></div>
      <div class='alert alert-warning'<%= ' style="display: none;"'.html_safe unless alert %>><%= alert if alert %></div>
    </div>
    <div class="container" align="center">
      <%= yield %>
    </div>
    <div align="center">
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
