<div class="container col-md-4 col-md-offset-4" align="center">
<h2 style="color: white;"><i class="fa fa-sign-in title" aria-hidden="true"></i> Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<hr>
<%= link_to user_facebook_omniauth_authorize_path, class:"btn btn-block btn-social btn-facebook"  do %>
  <span class='fa fa-facebook'></span>
  Sign in with Facebook
<% end  %>
<hr>
<%= render "devise/shared/links" %>
</div>
